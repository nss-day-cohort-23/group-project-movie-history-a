{{!-- checking to see if movie object has rating property, if so, adding as rated movie --}}
    {{#if rating}}
        <div class="card p-2 rated" id="needs_FB_Key">
          {{!-- checking if there is a movie poster URL, if there is not, we will pass in placeholder image --}}
          {{#if movie_poster_full_URL}}
            <img src="{{movie_poster_full_URL}}"> 
          {{else}} 
            <img src="https://islandpress.org/sites/default/files/400px%20x%20600px-r01BookNotPictured.jpg">
          {{/if}}
          <h2>{{movie_title}}</h2>
            <p>Released: {{movie_year}}</p>
            <p>Cast: {{movie_cast}}</p>
            <p>Watched</p>
            {{!-- if there is a current rating, the rating will display, if it is not yet rated, stars will show --}}
            {{#if rating}}
              <p>{{rating}}</p>
            {{else}}
              <button type="button" class="btn btn-secondary my-1" id = "rate">Rate</button>
            {{/if}}
              <button type="button" class="btn btn-secondary my-1" id = "delete">Remove Movie</button>
        </div>
{{!-- if the movie received does not have rated property, but has uid property, adding as unwatched(watchlist) user movie --}}
    {{else if uid}}
          <div class="card p-2 watchlist" id="needs_FB_Key">
            {{#if movie_poster_full_URL}}
              <img src="{{movie_poster_full_URL}}"> 
            {{else}} 
              <img src="https://islandpress.org/sites/default/files/400px%20x%20600px-r01BookNotPictured.jpg">
            {{/if}}
            <h2>{{this.movie_title}}</h2>
              <p>Released: {{this.movie_year}}</p>
              <p>Cast: {{this.movie_cast}}</p>
              <p>Unwatched</p>
              <button type="button" class="btn btn-secondary my-1" id = "mark-as-watched">Mark As Watched</button>
              <button type="button" class="btn btn-secondary my-1" id = "delete">Remove Movie</button>
        </div>
{{!-- if movie received has neither uid or watched as properties, prints as movie database movie --}}
    {{else}}
          <div class="card p-2 dbMovie untracked" id="{{this.movie_id}}">
            {{#if movie_poster_full_URL}}
              <img src="{{movie_poster_full_URL}}"> 
            {{else}} 
              <img src="https://islandpress.org/sites/default/files/400px%20x%20600px-r01BookNotPictured.jpg">
            {{/if}}
            <h2>{{this.movie_title}}</h2>
              <p>Released: {{this.movie_year}}</p>
              <p>Cast: {{this.movie_cast}}</p>
              <button type="button" class="btn btn-secondary my-1 add-to-watchlist">Add Movie</button>
        </div>
    {{/if}}